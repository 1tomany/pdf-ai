{
    "name": "1tomany/pdf-to-image",
    "description": "A simple library that converts a PDF to an image using the xpdf and Poppler libraries",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "keywords": [
        "pdf",
        "poppler",
        "pdftoppm",
        "xpdf",
        "pdf to image",
        "pdf2img",
        "pdf2image"
    ],
    "require": {
        "php": ">=8.4",
        "psr/container": "^2.0",
        "symfony/filesystem": "^7.2",
        "symfony/process": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.87.1",
        "phpstan/phpstan": "^2.1.22",
        "phpunit/phpunit": "^12.3.8"
    },
    "suggest": {
      "1tomany/data-uri": "Provides a data URI parser and immutable file object for handling local files"
    },
    "autoload": {
        "psr-4": {
            "OneToMany\\PdfToImage\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OneToMany\\PdfToImage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix": "./vendor/bin/php-cs-fixer fix",
        "stan": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit"
    },
    "authors": [
        {
            "name": "Vic Cherubini",
            "email": "vcherubini@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    }
}
